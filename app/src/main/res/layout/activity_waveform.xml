<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.WaveformActivity">

    <com.newventuresoftware.waveform.WaveformView
        android:id="@+id/waveformViewRecord"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        app:mode="RECORDING" />

    <com.newventuresoftware.waveform.WaveformView
        android:id="@+id/waveformViewPlayback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="#000000"
        app:mode="PLAYBACK"
        app:waveformColor="#ffffff"
        app:waveformFillColor="#000000"
        app:waveformStrokeThickness="0" />

</LinearLayout>
